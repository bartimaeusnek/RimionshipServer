@page
@model LogoutModel
@{
	ViewData["Title"] = "Logout";
}

@section Scripts
	{
	<script>
		window.setTimeout(() => window.location = "@Url.PageLink("Index")", 3000);
	</script>
}

	<header>
		<h1>@ViewData["Title"]</h1>
		@{
		if (User.Identity?.IsAuthenticated is true)
		{
			<form class="form-inline" asp-page="/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
				<button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
			</form>
		}
		else
		{
			<p>Du hast dich erfolgreich abgemeldet / You have been logged out</p>
		}
	}
</header>
