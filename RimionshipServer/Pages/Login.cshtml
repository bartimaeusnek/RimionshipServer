@page
@model LoginModel

@{
	ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>

<p>
	Um fortzufahren melde dich bitte mit deinem Twitch Account an / To continue, please log in with your Twitch credentials
</p>

<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
	<div>
		<p>
			<button type="submit" class="btn btn-primary" name="provider" value="Twitch" title="Twitch Login">Twitch Login</button>
		</p>
	</div>
</form>