@page
@model ExternalLoginModel
@{
	ViewData["Title"] = "Registration";
}

<h1 id="external-login-title">@Model.UserName!</h1>
<hr />

<p id="external-login-description">
	Um deine Registrierung abzuschliessen, stimme bitte noch den folgenden Bedingungen zu:<br />To complete the registration, please accept the following terms of service:
</p>

<div class="row">
	<form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-check">
			<input asp-for="Input.JoinConfirmation" class="form-check-input" />
			<label asp-for="Input.JoinConfirmation" class="form-check-label">Ich möchte an der Rimionship 2022 teilnehmen<br />I want to participate at the Rimionship 2022</label>
			<div>
				<span asp-validation-for="Input.JoinConfirmation" class="text-danger"></span>
			</div>
		</div>
		<div class="form-check" style="padding-top: 20px">
			<input asp-for="Input.TOSConfirmation" class="form-check-input" />
			<label asp-for="Input.TOSConfirmation" class="form-check-label">Ich akzeptiere die <a href="/TOS-de" target="_blank">Teilnahmebedingungen</a><br />I accept the <a href="/TOS-en" target="_blank">conditions of participation</a></label>
			<div>
				<span asp-validation-for="Input.TOSConfirmation" class="text-danger"></span>
			</div>
		</div>
		<div class="mt-3" style="padding-top: 20px">
			<button type="submit" class="btn btn-lg btn-primary">Anmelden / Register</button>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
