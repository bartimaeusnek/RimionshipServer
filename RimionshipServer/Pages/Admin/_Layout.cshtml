<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Rimionship 2022 Anmeldung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@{
#if DEBUG
}
    <link rel="stylesheet" href="/css/site.css">
@{
#else
}
    <link rel="stylesheet" href="/css/site.min.css">
@{
#endif
}
    @await RenderSectionAsync("Css", required: false)
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container">
				<a class="navbar-brand" asp-area="" asp-page="/Index">Rimionship Anmeldung 2022</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						  aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@if (User.IsInRole(Roles.Admin))
						{
							<li class="nav-item">
								<a class="nav-link" asp-page="/Admin/Index">Admin</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="~/dashboard.html">Dashboard</a>
							</li>
						}
					</ul>
                </div>
			</div>
		</nav>
	</header>
	<div class="container" style="min-height: 85vh">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

<footer class="border-top footer position-sticky bg-white" style="z-index: 1; overflow: hidden; margin-bottom: -10vh;">
    <div class="container">
        <a class="btn btn-outline-dark" asp-page="ModSettings">Einstellungen</a>
        <a class="btn btn-outline-dark" asp-page="Manage">Spieler</a>
        <a class="btn btn-outline-dark" asp-page="GraphConfigurator">Graphen</a>
        <a class="btn btn-outline-dark" asp-page="APILinks">API Links</a>
    </div>
</footer>
<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>